<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/const_layout"
        android:background="@drawable/res_item_bg">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="가게이름"
              android:textSize="23sp"
              android:textColor="@android:color/black"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:id="@+id/text_resNM"
              android:layout_marginTop="15dp"
              android:layout_marginStart="30dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/text_resPH"
              android:textColor="#727272"
              android:textSize="15sp"
              android:text="010-0000-0000" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toEndOf="@id/img_phone"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/text_resNM"
              android:layout_marginStart="8dp"/>

    <ImageView android:layout_width="20dp" android:layout_height="20dp"
               android:src="@drawable/ic_phone"
               tools:ignore="ContentDescription"
               android:id="@+id/img_phone"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="@id/text_resNM"
               app:layout_constraintEnd_toStartOf="@+id/text_resPH"
               app:layout_constraintTop_toBottomOf="@+id/text_resNM"/>


    <ImageButton android:layout_width="25dp" android:layout_height="25dp"
                 android:scaleType="centerCrop"
                 tools:ignore="ContentDescription"
                 android:id="@+id/btn_res"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 android:tint="#494949"
                 android:background="@android:color/transparent"
                 android:src="@drawable/ic_arrow"/>

</androidx.constraintlayout.widget.ConstraintLayout>