<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
android:background="@drawable/res_item_bg">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="가게이름"
              android:textSize="30sp"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:id="@+id/text_resNM"
              android:layout_marginTop="8dp"
              android:layout_marginStart="15dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/text_resPH"
              android:textColor="@android:color/darker_gray"
              android:textSize="20sp"
              android:text="010-0000-0000" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toEndOf="@id/img_phone"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/text_resNM"
              android:layout_marginStart="8dp"/>

    <ImageView android:layout_width="25dp" android:layout_height="25dp"
               android:src="@drawable/ic_phone"
               tools:ignore="ContentDescription"
               android:id="@+id/img_phone"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toStartOf="@+id/text_resPH"
               app:layout_constraintTop_toBottomOf="@+id/text_resNM" android:layout_marginStart="16dp"/>


    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 tools:ignore="ContentDescription"
                 android:id="@+id/btn_res"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                 android:layout_marginBottom="8dp"
                 app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="parent"
                 android:background="@android:color/transparent"
                 android:src="@drawable/ic_arrow"/>

</androidx.constraintlayout.widget.ConstraintLayout>