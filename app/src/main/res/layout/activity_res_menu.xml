<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".menuActivity.ResMenuActivity">



    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_resNM"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:background="#F59090"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <View android:layout_width="300dp" android:layout_height="2dp"
          app:layout_constraintTop_toBottomOf="@+id/text_resNM"
          android:layout_marginTop="30dp"
          android:background="#070000"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:id="@+id/view_line"/>

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line" android:layout_marginBottom="16dp"
            android:scrollbars="vertical"
            android:scrollbarSize="5dp"
            android:fadeScrollbars="false"
            app:layout_constraintBottom_toTopOf="@+id/button" android:layout_marginTop="16dp"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="contents"
                  android:id="@+id/text_resMenu"
                  app:layout_constraintTop_toBottomOf="@+id/view_line"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="14dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="14dp"/>

    </ScrollView>


    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="위치"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="180dp" android:id="@+id/button"/>



</androidx.constraintlayout.widget.ConstraintLayout>